<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-5">
      <h2>マイページ</h2>
      <table class='table'>
        <div style="display: flex; justify-content: center;">
          <%= image_tag @customer.get_profile_image(100, 100), class: "rounded-circle profile-image d-block mx-auto mb-3" %>
        </div>
        <tr>
          <th>name</th>
          <td><%= @customer.name %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @customer.introduction %></td>
        </tr>
         <tr>
          <th class="nowrap" style="font-size: 18px;">会員ステータス</th>
          <td style="font-size: 18px;">
            <% if @customer.is_active %>
            <span class='text-success'>有効</span>
            <% else %>
            <span class='text-secondary'>退会</span>
            <% end %>
          </td>
        </tr>
      </table>

      <div class='mt-5'>
        <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: "btn btn-success btn-block" %>
        <%= link_to "投稿一覧", admin_posts_path(filter: @customer.id), class: "btn btn-outline-secondary btn-block" %>
      </div>
    </div>
  </div>
</div>
