<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-5">
      <h2>customer info</h2>
      <%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
        <% if @customer.errors.any? %>
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
              <li class="error-message"><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :profile_image, class: "form-control-file customer_image", accept: 'image/*' %>
          <% if @customer.profile_image.attached? %>
            <%= image_tag @customer.profile_image.variant(resize_to_limit: [100, 100]), class: "rounded-circle profile-image mt-2" %>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="nowrap col-md-4">会員ステータス</div>
        <div class="row g-3">
          <div class="col">
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "有効", {value: true} %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "無効", {value: false} %>
          </div>
        </div>
        <input type="submit" name="commit" value="変更を保存" class="btn btn-success" data-disable-with="変更を保存">
      <% end %>
    </div>
  </div>
</div>
