<header>
   <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #d7e6d5;">
    <div class="container">
      <% if customer_signed_in? %>
        <%= link_to root_path, class: "navbar-brand", style: "margin-right: auto; margin-left: 0;" do %>
          <%= image_tag("title.jpg", alt: "shiory", size: "100x50") %>
        <% end %>
      <% elsif admin_admin_signed_in? %>
        <%= link_to admin_posts_path, class: "navbar-brand", style: "margin-right: auto; margin-left: 0;" do %>
          <%= image_tag("title.jpg", alt: "shiory", size: "100x50") %>
        <% end %>
      <% else %>
        <%= link_to root_path, class: "navbar-brand", style: "margin-right: auto; margin-left: 0;" do %>
          <%= image_tag("title.jpg", alt: "shiory", size: "100x50") %>
        <% end %>
      <% end %>
 
      <!-- ハンバーガー -->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <!-- ログインしていない場合 -->
          <li class="nav-item" style="list-style-type: none;">
            <% unless admin_admin_signed_in? || customer_signed_in? %>
            <%= link_to 'ゲストログイン（閲覧用）', guest_sign_in_path, method: :post, class: 'nav-link text-light' %>
          </li>
          <li class="nav-item" style="list-style-type: none;">
            <%= link_to new_customer_registration_path, class: 'nav-link text-light' do %>
              Sign up
            <% end %>
          </li>
          <li class="nav-item" style="list-style-type: none;">
            <%= link_to new_customer_session_path, class: 'nav-link text-light' do %>
              Log in
            <% end %>
          </li>
          <li class="nav-item" style="list-style-type: none;">
            <%= link_to posts_path, class: 'nav-link text-light' do %>
              Posts
            <% end %>
          </li>
          <li class="nav-item" style="list-style-type: none;">
            <%= link_to about_path, class: 'nav-link text-light' do %>
              About
            <% end %>
          </li>
          <% end %>
          <!-- 管理者がログインしている場合 -->
          <% if admin_admin_signed_in? %>
            <li class="nav-item" style="list-style-type: none;">
              <%= link_to posts_path, class: 'nav-link text-light' do %>
                Posts
              <% end %>
            </li>
            <li class="nav-item" style="list-style-type: none;">
              <%= link_to customers_path, class: 'nav-link text-light' do %>
                Customers
              <% end %>
            </li>
            <li class="nav-item" style="list-style-type: none;">
              <%= link_to destroy_adminadmin__session_path, method: :delete, class: 'nav-link text-light' do %>
                Log out
              <% end %>
            </li>
          <% end %>
          <!-- 顧客がログインしている場合 -->
          <% if customer_signed_in? %>
            <li class="nav-item" style="list-style-type: none;">
              <%= link_to customers_path, class: 'nav-link text-light' do %>
                My Page
              <% end %>
            </li>
            <li class="nav-item" style="list-style-type: none;">
              <%= link_to posts_path, class: 'nav-link text-light' do %>
                Post
              <% end %>
            </li>
            <li class="nav-item" style="list-style-type: none;">
              <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-light' do %>
                Log out
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>