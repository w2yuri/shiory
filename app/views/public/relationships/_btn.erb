<% if current_customer != customer %>
  <% if current_customer.following?(customer) %>
    <%= link_to "Unfollow", relationship_path(id: customer.id), method: :delete, class: "btn btn-info" %>
  <% else %>
    <%= link_to "Follow", relationships_path(id: customer.id), method: :post, class: "btn btn-success" %>
  <% end %>
<% end %>