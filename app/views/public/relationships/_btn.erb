<% if current_customer != customer %>
  <% if current_customer.following?(customer) %>
    <%= link_to "フォロー外す", relationship_path(id: customer.id), method: :delete, class: "btn btn-info" %>
  <% else %>
    <%= link_to "フォローする", relationships_path(id: customer.id), method: :post, class: "btn btn-success" %>
  <% end %>
<% end %>