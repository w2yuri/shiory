<% if resource.errors.any? %>
<div class="alert alert-danger" role="alert">
        <div class="container">
          <%= render "public/shared/error_messages", resource: resource %>
        </div>
</div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">

      <h2 class="mt-5">新規会員登録</h2>
      
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
          <div class="form-group">
            <%= f.label :name, 'ユーザーネーム' %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "shiory", class: 'form-control' %>
          </div>
        
          <div class="form-group">
            <%= f.label :email, 'メールアドレス' %><br />
            <%= f.email_field :email, autocomplete: "email", placeholder: "shiory@△△.com", class: 'form-control' %>
          </div>
        
          <div class="form-group">
            <%= f.label :password, 'パスワード' %>
            <% if @minimum_password_length %>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上", class: 'form-control'  %>
          </div>
        
          <div class="form-group">
            <%= f.label :password_confirmation, 'パスワードの確認' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "6文字以上", class: 'form-control'  %>
          </div>
        
          <div class="actions mt-2">
            <%= f.submit '新規登録', class: "button" %>
          </div>
        <% end %>
        
        <h3 class="mt-5 mb-2">既に登録済みの方</h3>
        <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>

      </div>
  </div>
</div>
