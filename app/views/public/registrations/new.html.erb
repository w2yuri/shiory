<div class="container">
  <div class="row">
    <div class="mx-auto">

      <h2 class="mt-5">新規会員登録</h2>
      
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
        
          <div class="field mt-4">
            <%= f.label :ユーザーネーム %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "shiory" %>
          </div>
        
          <div class="field mt-3">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "shiory@△△.com" %>
          </div>
        
          <div class="field mt-3">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上" %>
          </div>
        
          <div class="field mt-3">
            <%= f.label :パスワードの確認 %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "6文字以上" %>
          </div>
        
          <div class="actions mt-2">
            <%= f.submit "新規登録" %>
          </div>
        <% end %>
        
        <h3 class="mt-5 mb-2">既に登録済みの方</h3>
        <p><%= link_to "こちら", new_user_session_path %>からログインしてください。</p>

      </div>
  </div>
</div>
