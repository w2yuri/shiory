<div class="row mt-5 mt-md-0">
  <% customers.each do |customer| %>
    <div class="col-lg-4 col-md-6 mb-2">
      <div class="card">
        <%= image_tag customer.get_profile_image(500, 500), class: "profile-image__index_2 img-fluid" %>
        <div class="card-header"><%= customer.name %></div>
        <div class="card-body d-flex justify-content-between">
          <div>
            <%= render "public/relationships/btn", customer: customer %>
          </div>
          <div>
            <%= link_to 'My Page', customer_path(customer), class: "btn btn-outline-primary"  %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
