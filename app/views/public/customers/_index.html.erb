      <div class="card">
        <%= image_tag customer.get_profile_image(500, 500), class: "profile-image__index img-fluid" %>
        <div class="card-header"><%= customer.name %></div>
        <div class="card-body d-flex justify-content-between">
          <div>
            <%= render "public/relationships/btn", customer: customer %>
          </div>
          <div>
            <%= link_to 'Show', customer_path(customer) %>
          </div>
        </div>
        <!--<div class="card-footer"></div>-->
      </div>
    </div>
  <% end %>
</div>
