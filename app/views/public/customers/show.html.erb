<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-5">

    <h2 style="text-align: center;">My Page</h2>
    <table class='table'>
        <div style="display: flex; justify-content: center;">
            <div>
              <%= image_tag @customer.get_profile_image(100, 100), class: "rounded-circle profile-image d-block mx-auto mb-3" %>
            </div>
        </div>
        <tr>
      	  <th>name</th>
      	  <th><%= @customer.name %></th>
        </tr>
        <tr>
      	  <th>introduction</th>
      	  <th><%= @customer.introduction %></th>
        </tr>
        <tr>
          <th>follows</th>
          <th><%= link_to @customer.followings.count, followings_path(@customer) %></th>
        </tr>
        <tr>
          <th>followers</th>
          <th><%= link_to @customer.followers.count, followers_path(@customer) %></th>
        </tr>
      </table>

      <div class="mt-3 text-center">
        <% if current_customer != @customer %>
          <div>
            <%= render "public/relationships/btn", customer: @customer %>
          </div>
          <div class="mt-3">
            <% if current_customer.following?(@customer) && @customer.following?(current_customer) %>
              <%= link_to 'チャットを始める', chat_path(@customer.id), class: "btn btn-outline-secondary btn-block" %>
            <% end %>
            <%= link_to "投稿一覧", posts_path(filter: @customer.id), class: "btn btn-outline-secondary btn-block" %>
          </div>
        <% end %>
      </div>

      <div class='mt-5'>
        <% if current_customer != @customer %>
          <% else %>
        <%= link_to 'ユーザー情報編集', edit_customer_path(@customer), class: "btn btn-outline-secondary btn-block edit_customer_#{@customer.id}" %>
        <%= link_to "投稿一覧", posts_path(filter: @customer.id), class: "btn btn-outline-secondary btn-block" %>
        <%= link_to "下書き一覧", customer_confirm_path(current_customer), class: "btn btn-outline-secondary btn-block" %>
        <%= link_to "いいね一覧", posts_path(filter: @customer.id, is_favorite: true), class: "btn btn-outline-secondary btn-block" %>
        <%= link_to 'チャットを始める', chat_groups_path, class: "btn btn-outline-secondary btn-block" %>
        <%= link_to "退会する", public_customers_unsubscribe_path, class: "btn btn-danger btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
