<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto my-5">
      <h2 style="text-align: center;">Edit</h2>
      <%= form_with model: @customer, url: customer_path(@customer), local: true do |f| %>
        <% if @customer.errors.any? %>
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
              <li class="error-message"><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="form-group">
          <%= f.label :Name %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :Image %>
          <%= f.file_field :profile_image, class: "form-control-file customer_image", accept: 'image/*' %>
          <% if @customer.profile_image.attached? %>
            <%= image_tag @customer.profile_image.variant(resize_to_limit: [100, 100]), class: "rounded-circle profile-image mt-2" %>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :Introduction %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div style="text-align: center; color: #ffe9a5;">
          <%= f.submit "編集を保存", class: "btn btn-primary", style: "color: #ffe9a5;" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
