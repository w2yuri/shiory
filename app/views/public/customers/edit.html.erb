<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-5">
      <h2>customer info</h2>
      <%= form_with model: @customer, url: customer_path(@customer), local: true do |f| %>
        <%#= render 'layouts/errors', obj: @customer %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :profile_image, class: "form-control-file customer_image", accept: 'image/*' %>
          <% if @customer.profile_image.attached? %>
            <%= image_tag @customer.profile_image.variant(resize_to_limit: [100, 100]), class: "preview-image rounded-circle mt-2" %>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.submit "編集を保存", class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
