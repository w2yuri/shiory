<table>
  <tbody>
    コメント数: <%= travel_task.comments.count %>
      <% travel_task.comments.each do |comment| %>
      <tr>

        <td>
          <%= link_to customer_path(comment.customer) do %>
            <%= image_tag comment.customer.get_profile_image(100, 100) %><br>
            <%= comment.customer.name %>
          <% end %>
        </td>
        <td><%= comment.content %></td>
        <td>
          <% if comment.customer == current_customer %>
            <%= link_to "Destroy", travel_task_comment_path(travel_task, comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>