<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-5">
      <h3>edit</h3>
      <%= form_with(model: @post.travel_tasks, local: true) do |f| %>
        <ul>
          <div class="form-group">
            <%= f.label :travel_task_title %>
            <%= f.text_field :travel_task_title, class: 'form-control post_title' %>
          </div>
          <div class="form-group">
            <%= f.label :travel_task_contents %>
            <%= f.text_area :contents, class: 'form-control post_body' %>
          </div>
          <div class="form-group">
            <%= f.label :travel_task_image %>
            <%= f.text_area :task_image, class: 'form-control post_body' %>
          </div>
          <div class="form-group">
            <%= f.submit class: 'btn btn-success' %>
          </div>
        </ul>
      <% end %>
       <div class="mt-3">
        <% if @post.customer == current_customer %>
          <%= link_to 'Show', @post, class: "post_#{@post.id}" %> |
          <%= link_to 'Back', posts_path, class: "back" %>
        <% end %>
       </div>
  </div>
</div>

