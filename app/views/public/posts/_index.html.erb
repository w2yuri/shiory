<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= image_tag post.customer.get_profile_image, class: "rounded-circle", size: '50, 50' %></td>
        <td><%= post.customer.name %></td>
        <!--<td><#%= render "relationships/btn", user: user %></td>-->
        <td><%= link_to 'Show', customer_path(post.customer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>